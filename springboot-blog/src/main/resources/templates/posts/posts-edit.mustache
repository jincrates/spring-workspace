{{>layout/header}}

<!-- Page Header-->
<header class="masthead2" style="background-image: url('assets/img/post-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="post-heading">
                    <h1>
                        <input type="text" class="input-white w-100" id="title" placeholder="제목을 입력하세요"
                            {{#post}}
                               value="{{post.title}}"
                            {{/post}}
                        />
                    </h1>
                    <h2 class="subheading">
                        <input type="text" class="input-white w-100" id="subtitle" placeholder="부제를 입력하세요"
                            {{#post}}
                                value="{{post.subtitle}}"
                            {{/post}}
                        />
                    </h2>
                    <span class="meta">
                        Posted by
                        <input type="text" class="input-white w-30" id="author" placeholder="작성자를 입력하세요"
                            {{#post}}
                                value="{{post.author}}" readonly
                            {{/post}}
                            {{^post}}
                                {{#userName}}
                                    value="{{userName}}" readonly
                                {{/userName}}
                            {{/post}}
                        />
                        <small class="mx-1"></small>
                    </span>
                </div>
                <div class="text-end" style="padding-top: 100px;">
                    <button class="btn-upload btn btn-sm btn-secondary rounded">대표 이미지</button>
                    <input class="hdn-file" type="file" hidden>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content-->
<article class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <textarea class="form-control editor" id="content">
                    {{#post}}
                        {{post.content}}
                    {{/post}}
                </textarea>
            </div>
        </div>

        <div class="row gx-4 gx-lg-5 justify-content-center my-2">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <a href="/" role="button" class="btn btn-secondary">취소</a>
                {{#post}}
                    <input type="hidden" id="id" value="{{post.id}}" />
                    <button type="button" class="btn btn-primary" id="btn-update">수정완료</button>
                {{/post}}
                {{^post}}
                    <button type="button" class="btn btn-primary" id="btn-save">등록</button>
                {{/post}}
            </div>
        </div>
    </div>
</article>

<script>
    $(document).ready(function() {
        //여기 아래 부분
        $('.editor').summernote({
              minHeight: 600,             // 최소 높이
              maxHeight: null,            // 최대 높이
              focus: false,               // 에디터 로딩후 포커스를 맞출지 여부
              lang: "ko-KR",			  // 한글 설정
              placeholder: "최대 2048자까지 쓸 수 있습니다."	//placeholder 설정
        });

        $('.btn-upload').click(function() {
            $('.hdn-file').click();
        });
    });
</script>

{{>layout/footer}}